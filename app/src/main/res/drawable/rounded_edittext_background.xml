<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <solid android:color="#66FFFFFF" /> <!-- Shadow color -->
        </shape>
    </item>

    <!-- Actual background with rounded corners -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <solid android:color="#66FFFFFF" /> <!-- Background color -->
        </shape>
    </item>

</layer-list>

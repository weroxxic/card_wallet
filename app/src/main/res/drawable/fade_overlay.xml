<!-- res/drawable/fade_overlay.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@android:color/black"
                android:angle="0"
                android:type="linear"
                android:gradientRadius="0.5"
                android:useLevel="false" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@android:color/black"
                android:angle="90"
                android:type="linear"
                android:gradientRadius="0.5"
                android:useLevel="false" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@android:color/black"
                android:angle="180"
                android:type="linear"
                android:gradientRadius="0.5"
                android:useLevel="false" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@android:color/black"
                android:angle="270"
                android:type="linear"
                android:gradientRadius="0.5"
                android:useLevel="false" />
        </shape>
    </item>
</layer-list>
